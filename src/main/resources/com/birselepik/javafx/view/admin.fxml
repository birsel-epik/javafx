<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.birselepik.javafx.controller.AdminController">

    <!-- HEADER -->
    <top>
        <VBox>
            <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: #2c3e50; -fx-padding: 10;">
                <Label fx:id="labelTitle" style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;" />
                <Button fx:id="btnDarkMode" onAction="#toggleTheme" style="-fx-background-color: #2c3e50; -fx-text-fill: white; -fx-background-radius: 8;" />
                <Button fx:id="btnLanguage" onAction="#languageTheme" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 8;" />
                <Button fx:id="btnNotifications" onAction="#showNotifications" style="-fx-background-color: #e67e22; -fx-text-fill: white; -fx-background-radius: 8;" />
                <Button fx:id="btnBackup" onAction="#backupData" style="-fx-background-color: #16a085; -fx-text-fill: white; -fx-background-radius: 8;" />
                <Button fx:id="btnRestore" onAction="#refreshTable" style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-background-radius: 8;" />

                <Pane HBox.hgrow="ALWAYS" />
                <Button fx:id="btnNotebook" onAction="#addNotebook" style="-fx-background-color: #139c12; -fx-text-fill: white; -fx-background-radius: 8;" />
                <Pane HBox.hgrow="ALWAYS" />
                <Button fx:id="btnProfile" onAction="#showProfile" style="-fx-background-color: #8e44ad; -fx-text-fill: white; -fx-background-radius: 8;" />

                <Button fx:id="btnLogout" onAction="#logout" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 8;" />
                <Label fx:id="clockLabel" style="-fx-text-fill: white;" />
            </HBox>

            <MenuBar fx:id="menuBar" style="-fx-background-color: white; -fx-text-fill: #2c3e50;">
                <menus>
                    <Menu text="Dosya">
                        <MenuItem text="Çıkış" onAction="#logout" />
                    </Menu>
                    <Menu text="Kullanıcı">
                        <MenuItem text="Kullanıcı Ekle" onAction="#addUser" />
                        <MenuItem text="Kullanıcı Güncelle" onAction="#updateUser" />
                        <MenuItem text="Kullanıcı Sil" onAction="#deleteUser" />
                    </Menu>
                    <Menu text="KDV İşlemleri">
                        <MenuItem text="KDV Ekle" onAction="#addKdv" />
                        <MenuItem text="KDV Güncelle" onAction="#updateKdv" />
                        <MenuItem text="KDV Sil" onAction="#deleteKdv" />
                    </Menu>
                    <Menu text="Diğer İşlemler">
                        <MenuItem text="Hesap Makinesi" onAction="#openCalculator" />
                       <MenuItem text="Not Defteri" onAction="#addNotebook" />
                    </Menu>
                    <Menu text="Yardım">
                        <MenuItem text="Hakkında" onAction="#showAbout" />
                    </Menu>
                </menus>
            </MenuBar>
        </VBox>
    </top>

    <!-- ANA GÖRÜNÜM -->
    <center>
        <SplitPane orientation="HORIZONTAL" style="-fx-background-size: cover;">
            <!--<SplitPane orientation="HORIZONTAL" style="-fx-background-image: url('/images/login.webp'); -fx-background-size: cover;">-->

            <!-- SOL PANEL (Kullanıcı Yönetimi) -->
            <VBox spacing="20" style="-fx-padding: 30; -fx-background-color: rgba(255,255,255,0.9); -fx-background-radius: 15;">
                <Label fx:id="labelUserManagement" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                <TextField fx:id="searchField" promptText="Kullanıcı adı, e-posta veya rol ara..."
                           style="-fx-padding: 10; -fx-background-radius: 8; -fx-border-color: #ccc; -fx-border-radius: 8;" />
                <ComboBox fx:id="filterRoleComboBox" promptText="Rol filtrele"
                          style="-fx-padding: 8; -fx-background-radius: 8; -fx-border-color: #ccc; -fx-border-radius: 8;" />

                <TableView fx:id="userTable" prefHeight="300" style="-fx-border-color: #bdc3c7; -fx-background-radius: 10;">
                    <columns>
                        <TableColumn fx:id="idColumn" text="%ID" prefWidth="40" />
                        <TableColumn fx:id="usernameColumn" text="%username" prefWidth="150" />
                        <TableColumn fx:id="emailColumn" text="%email" prefWidth="180" />
                        <TableColumn fx:id="passwordColumn" text="%password" prefWidth="100" />
                        <TableColumn fx:id="roleColumn" text="%role" prefWidth="80" />
                    </columns>
                </TableView>

                <HBox spacing="10">
                    <Button fx:id="btnAdd" text="%button.add" onAction="#addUser" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 8;" />
                    <Button fx:id="btnUpdate" text="%button.update" onAction="#updateUser" style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-background-radius: 8;" />
                    <Button fx:id="btnDelete" text="%button.delete" onAction="#deleteUser" style="-fx-background-color: #c0392b; -fx-text-fill: white; -fx-background-radius: 8;" />
                    <Button fx:id="btnPrint" text="%button.print" onAction="#printTable" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-background-radius: 8;" />
                </HBox>
                <HBox spacing="10">
                </HBox>
            </VBox>


            <!-- SAĞ PANEL -->
            <!-- kdv -->
            <VBox spacing="15" style="-fx-padding: 30; -fx-background-color: rgba(255,255,255,0.95); -fx-background-radius: 15;">
                <Label fx:id="labelTaxCalculation" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                <TextField fx:id="searchKdvField" promptText="Fiş numarası ara..."
                           style="-fx-padding: 10; -fx-background-radius: 8; -fx-border-color: #ccc; -fx-border-radius: 8;" />

                <TableView fx:id="kdvTable" prefHeight="300" style="-fx-border-color: #bdc3c7; -fx-background-radius: 10;">
                    <columns>
                        <TableColumn fx:id="idColumnKdv" text="%ID" prefWidth="40" />
                        <TableColumn fx:id="amountColumn" text="%amount" prefWidth="80" />
                        <TableColumn fx:id="kdvRateColumn" text="%kdvRate" prefWidth="80" />
                        <TableColumn fx:id="kdvAmountColumn" text="%kdvAmount" prefWidth="90" />
                        <TableColumn fx:id="totalAmountColumn" text="%totalAmount" prefWidth="90" />
                        <TableColumn fx:id="receiptColumn" text="%receipt" prefWidth="90" />
                        <TableColumn fx:id="dateColumn" text="%date" prefWidth="100" />
                        <TableColumn fx:id="descColumn" text="%desc" prefWidth="150" />
                    </columns>
                </TableView>

                <HBox spacing="10" alignment="CENTER">
                    <Button text="KDV Ekle" onAction="#addKdv" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 8;" />
                    <Button text="Güncelle" onAction="#updateKdv" style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-background-radius: 8;" />
                    <Button text="Sil" onAction="#deleteKdv" style="-fx-background-color: #c0392b; -fx-text-fill: white; -fx-background-radius: 8;" />
                </HBox>

                <HBox spacing="10" alignment="CENTER">
                    <Button fx:id="btnKdvExportTxt" text="TXT'ye Aktar" onAction="#exportKdvAsTxt"
                            style="-fx-background-color: #7f8c8d; -fx-text-fill: white; -fx-background-radius: 8;" />
                    <Button fx:id="btnKdvExportPdf" text="PDF'e Aktar" onAction="#exportKdvAsPdf"
                            style="-fx-background-color: #8e44ad; -fx-text-fill: white; -fx-background-radius: 8;" />
                    <Button fx:id="btnKdvExportExcel" text="Excel'e Aktar" onAction="#exportKdvAsExcel"
                            style="-fx-background-color: #16a085; -fx-text-fill: white; -fx-background-radius: 8;" />
                </HBox>

                <HBox spacing="10" alignment="CENTER">
                    <Button fx:id="btnKdvPrint" text="Yazdır" onAction="#printKdvTable"
                            style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-background-radius: 8;" />
                    <Button fx:id="btnKdvMail" text="Mail Gönder" onAction="#sendKdvByMail"
                            style="-fx-background-color: #d35400; -fx-text-fill: white; -fx-background-radius: 8;" />
                </HBox>
            </VBox>


            <!-- Not -->
            <VBox spacing="15" style="-fx-padding: 30; -fx-background-color: rgba(255,255,255,0.95); -fx-background-radius: 15;">
                <Label fx:id="labelNotes" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                <TextField fx:id="searchNotebookField" promptText="Not ara..."
                           style="-fx-padding: 10; -fx-background-radius: 8; -fx-border-color: #ccc; -fx-border-radius: 8;" />

            <TableView fx:id="notebookTable" prefHeight="300" style="-fx-border-color: #bdc3c7; -fx-background-radius: 10;">
                <columns>
                    <TableColumn fx:id="idColumnNotebook" text="%ID" prefWidth="40" />
                    <TableColumn fx:id="titleColumn" text="%title" prefWidth="80" />
                    <TableColumn fx:id="contentColumn" text="%content" prefWidth="80" />
                    <TableColumn fx:id="categoryColumn" text="%category" prefWidth="90" />
                    <TableColumn fx:id="userDTOColumn" text="%userDTO" prefWidth="100" />
                    <TableColumn fx:id="pinnedColumn" text="%pinned" prefWidth="50" />
                </columns>
            </TableView>

            <HBox spacing="10" alignment="CENTER">
                <Button text="Not Ekle" onAction="#addNotebook" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 8;" />
                <Button text="Güncelle" onAction="#updateNotebook" style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-background-radius: 8;" />
                <Button text="Sil" onAction="#deleteNotebook" style="-fx-background-color: #c0392b; -fx-text-fill: white; -fx-background-radius: 8;" />
            </HBox>

                <!--todo: export ve mail göndermek için butonlar ekle-->
        </VBox>

        </SplitPane>
    </center>

    <!-- FOOTER -->
    <bottom>
        <HBox alignment="CENTER" style="-fx-background-color: #ecf0f1; -fx-padding: 12;">
            <Label text="© 2025 Birsel EPİK | Kullanıcı ve KDV Yönetimi Sistemi" style="-fx-text-fill: #7f8c8d; -fx-font-size: 13px;" />
        </HBox>
    </bottom>

</BorderPane>
