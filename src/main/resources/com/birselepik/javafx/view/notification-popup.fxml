<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>

<StackPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.birselepik.javafx.controller.NotificationPopupController" prefWidth="200" prefHeight="200" style="-fx-background-color: white; -fx-border-color: #ccc; -fx-border-radius: 8; -fx-padding: 10;">
    <VBox spacing="10">
        <Label fx:id="btnNotifications" text="%notifications" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
        <ListView fx:id="notificationListView" prefHeight="150" />
        <Button text="Kapat" onAction="#closePopup" />
    </VBox>
</StackPane>
